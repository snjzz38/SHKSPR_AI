{
  "builds": [
    {
      "src": "/AI_Humanizer/api/Humanizer_API.js",
      "use": "@vercel/node"
    },
    {
      "src": "/AI_Grader/api/Grader_API.js",
      "use": "@vercel/node"
    },
    {
      "src": "/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/api/humanizer",
      "destination": "/AI_Humanizer/api/Humanizer_API.js"
    },
    {
      "source": "/api/Grader_API",
      "destination": "/AI_Grader/api/Grader_API.js"
    },
    {
      "source": "/",
      "destination": "/index.html"
    }
    // Optional: Keep this if you plan to add standard api routes later
    // {
    //   "source": "/api/:path*",
    //   "destination": "/api/:path*"
    // }
  ]
}
