{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1.js"
    },
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/((?!api/|.*\\.).*)",
      "destination": "/$1.html"
    }
  ]
}
